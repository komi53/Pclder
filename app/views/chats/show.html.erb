<% @chats.first(1).each do |chat| %>
		<h1 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= link_to "<", rooms_index_path %><%= chat.user.name %></h1>
<% end %>
	<div class="message">
		<div class="card-body msg_card_body">
			<% @chats.each do |chat| %>
		 		<% unless chat.user_id == current_user.id %>
					<div class="d-flex justify-content-start mb-4">
						<div class="img_cont_msg">
							<%= attachment_image_tag chat.user, :profile_image, class: "rounded-circle border border-dark", format: 'jpeg', fallback: "no_image.jpg",:size =>'40x40' %>
						</div>
						<div class="msg_cotainer">
							<%= chat.message %>
							<span class="msg_time"><%= chat.created_at.strftime("%H:%M %p,%b %d") %></span>
						</div>
					</div>
				<% else %>
					<div class="d-flex justify-content-end mb-4">
						<div class="msg_cotainer_send">
							<%= chat.message %>
							<span class="msg_time_send"><%= chat.created_at.strftime("%H:%M %p,%b %d") %></span>
						</div>
						<div class="img_cont_msg">
							<%= attachment_image_tag chat.user, :profile_image, class: "rounded-circle border border-dark", format: 'jpeg', fallback: "no_image.jpg",:size =>'40x40' %>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	<div class="card-footer">
		<%= form_with model: @chat, data: {remote: true} do |f| %>
			<%= f.text_field :message, class: "form-control type_msg", placeholder: "Type your message..." %>
			<%= f.hidden_field :room_id %>
		<% end %>
	</div>
</div>
