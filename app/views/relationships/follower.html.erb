<h2>Follow Users</h2>
<% if @users.count > 0 %>
    <% @users.each do |user| %>
      
        <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", :size =>'100x100') %></td>
        <%= user.name %></td>
        フォロー数：<%= user.follower.count %></td>
        フォロワー数：<%= user.followed.count %></td>
        
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
            <% end %>
          <% end %>
        
        <%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      
    <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
