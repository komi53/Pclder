<div class="row">
    <div class="col-md-4">
	   <%= link_to  user_path(@post.user_id), class: "user-link" do %>
                 <%= attachment_image_tag @post.user, :profile_image, class: "rounded-circle border border-white", format: 'jpeg', fallback: "no_image.jpg",:size =>'40x40' %>
                 <span><%= @post.user.name %>@<%= @post.user.at_name %></span>
      <% end %>
    </div>
    <div class="offset-md-9">
      <% if @post.user == current_user %>
        <%=link_to '編集', edit_post_path(@post.id) %>
        <%= link_to '削除', @post, method: :delete, data: { confirm: '本当に消しますか？' } %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-2">
    <%= attachment_image_tag @post, :post_image, format: 'jpeg', fallback: "no_image.jpg", class: "show-image" %>
    </div>
    <div class="col-md-8 offset-md-2">
      <%= @post.title %>

  <h1>Rakuserach</h1>
<div class='content'>
  <div id="search-box">
    <%= form_tag url: post_path, method: :get, remote: true do %>
        <%= text_field_tag :keyword, "",  id: "good_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <h2>検索結果</h2>
  <div id='good_list'>
     <%= render partial: 'good_list' %>
  </div>
</div>
  <!-- The Modal -->
  <div class="modal" id="myModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Modal Heading</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!-- Modal body -->
        <div class="modal-body">
          <%= render partial: 'good_list' %>
        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>



