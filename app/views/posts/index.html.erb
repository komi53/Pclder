<% if @posts %>
みんなの投稿
	<% @posts.each do |post| %>
    <div class="well">
      <div class="media">
            <%= link_to  user_path(post.user_id) do %>
                 <%= attachment_image_tag post.user, :profile_image, class: "rounded-circle border border-dark", format: 'jpeg', fallback: "no_image.jpg",:size =>'40x40' %>
            <% end %>
      <div class="media-body">
        <div class="media-heading"><%= link_to post.title, post_path(post.id), class: "btn text-dark" %></div>
          <%= link_to  post_path(post.id) do %>
            <%= attachment_image_tag post, :post_image, format: 'jpeg', fallback: "no_image.jpg",:size =>'600x400' %>
          <% end %>
          <p class="text-left"><%= post.user.name %>@<%= post.user.at_name %></p>
          <p>
            <%= post.pc_introduction %>
          </p>

        <span><%= post.created_at.strftime('%Y/%m/%d') %> </span>
            |
            <span><i class="fa fa-comment"></i><%= link_to "#{post.post_comments.count}", post_path(post.id) %></span>
            |
            <span><i class="fa fa-tags"></i>
          <% post.tag_list.each do |tag| %>
            <%= link_to tag, posts_path(tag_name: tag), class: "badge badge-success p-1 badge-tag",data: {"turbolinks" => false} %>
          <% end %>
        </span>
            |
            <span>
              <%= link_to '', "https://twitter.com/share?url=#{request.url}&text=#{ post.title }/&hashtags=Pclder", class: 'fab fa-twitter fa-lg', data: { show_count: false }, title: 'Twitter', target: '_blank', style: "text-decoration: none;" %>
            </span>
            <span>
              <%= link_to "https://line.me/R/msg/text/?#{request.url}" do %>
                   <div class="line-it-button" data-lang="ja" data-type="share-b" data-color="default" data-size="small" data-count="false" style="display: none; "></div>
               <% end %>
             </span>
       </div>
    </div>
  </div>
  <hr>
<% end %>

