<%= link_to user_follows_path(user.id), class: "link" do %>
  フォロー数：<%= user.follower.count %>
<% end %>
<%= link_to user_followers_path(user.id), class: "link" do %>
  フォロワー数：<%= user.followed.count %>
<% end %>
<% if user_signed_in? %>
  <% if current_user != user %>
	<% if current_user.following?(user) %>
	  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-primary" %>
	  <%= link_to 'メッセージを送る', chat_path(user.id), class: "btn btn-outline-primary" %>
	<% else %>
	  <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, remote: true, class: "btn btn-success" %>
	<% end %>
  <% end %>
<% end %>