<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>


       <%= attachment_image_tag @user, :profile_image, class: "rounded-circle border border-dark", format: 'jpeg', fallback: "no_image.jpg",:size =>'200x200' %>
       	
       <%= @user.name %>@<%= @user.at_name %>
       <%= @user.introduction %>
       <% if current_user == @user %>
       <%= link_to 'プロフィール編集', edit_user_path(@user.id) %>
       <% end %>
       <%= link_to user_follows_path(@user.id) do %>
        フォロー数：<%= @user.follower.count %>
        <% end %>
        <%= link_to user_followers_path(@user.id) do %>
        フォロワー数：<%= @user.followed.count %>
        <% end %>
<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
  <% end %>
  <%= link_to 'chatを始める', chat_path(@user.id)%>
<% end %>